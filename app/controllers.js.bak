/* 
 * controllers.js
 * Define controllers for app
 */

// MainCtrl
// Used for controlling collapse state for mobile view
app.controller('mainCtrl', function($scope, collapseService) {
  $scope.collapseService = collapseService;
});

// Controller for navbar
app.controller('navBarCtrl', function($scope, $location) {
    $scope.isActive = function(viewLocation) {
        return viewLocation === $location.path();
    };
});

// Declare controllers
app.controller('homeCtrl', function($scope, indexService) {
    indexService.setIndex(0);
});

app.controller('aboutCtrl', function($scope, indexService) {
    indexService.setIndex(1);
});

app.controller('resumeCtrl', function($scope, indexService) {
    indexService.setIndex(2);
});

app.controller('projectsCtrl', function($scope, indexService) {
    indexService.setIndex(3);
});

app.controller('contactCtrl', function($scope, indexService) {
    indexService.setIndex(4);
});
